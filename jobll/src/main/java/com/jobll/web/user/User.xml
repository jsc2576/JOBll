<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jobll.web.user.User">

	<select id="select" resultType="java.util.HashMap">
		SELECT * FROM "user_info"
	</select>
	
	
	<select id="read" parameterType="com.jobll.web.user.User" resultType="java.util.HashMap">
		SELECT * FROM "user_info" WHERE user_idx = #{user_idx}
	</select>
		
	<insert id="create" parameterType="com.jobll.web.user.User">
		insert into "user_info"(
			"user_idx",
			"user_id",
			"user_pw",
			"user_nm",
			"user_adress",
			"user_phone",
			"user_type",
			"user_grade",
			"user_company",
			"user_valid"
			)
		values (
			(select nextval('seq_user_idx')),
			#{user_id},
			#{user_pw},
			#{user_nm},
			#{user_adress},
			#{user_phone},
			#{user_type},
			#{user_grade},
			#{user_company},
			#{user_valid}
			)
	</insert>
	
	<update id="edit" parameterType="com.jobll.web.user.User">
		update "user_info" set
		        
		where "user_idx" = #{user_idx}
	</update>
	
	<delete id="delete" parameterType="com.jobll.web.user.User">
		delete from "user_info"        
		where "user_idx" = #{user_idx}
	</delete>
</mapper>
